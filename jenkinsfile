pipeline {
  agent any

    stages {
      stage('Scm Checkout') {
        steps {
          git branch: 'main', url: 'https://github.com/rahatdevops/java-jenkins.git'
            }
            }
      stage('Build App') {
        steps {
          sh 'mvn clean package'
            }
            }
      stage('Build Docker Images') {
        steps {
          sh 'docker build -t rahat6/nginximage:v1 . '
            }
            }
      stage('Push the Docker Images') {
         steps {
	   withCredentials([string(credentialsId: 'dockerHub', variable: 'dockerHub')]) {
	      sh "docker login -u rahatdevops -p ${dockerHub}"
		}
              sh 'docker push rahat6/nginximage:v1'
            }
            }
      stage('Image Pull and deploy the application') {
         steps {
	   sh 'docker rm web -f'
	   sh 'docker pull rahat6/nginximage:v1'
	   sh 'docker run --name web -dit -p 8081:8080 rahat6/nginximage:v1'
				
            }
        }
    }
}
